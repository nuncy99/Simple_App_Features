<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/offblue">

        <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@color/white"

        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="10dp">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="30dp"
        android:text="Lets Keep Learning"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:layout_marginStart="30dp"
        android:textStyle="bold"
        android:textSize="34sp"
        android:layout_marginEnd="30dp"/>
    </RelativeLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical"
        android:layout_marginTop="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"

        android:background="@drawable/background"
        android:layout_height="match_parent">

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:text="ADDITION"
            android:background="@color/blue"
            android:layout_gravity="center"
            android:id="@+id/addBtn"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:text="LOGIN"
            android:background="@color/blue"
            android:layout_gravity="center"
            android:id="@+id/loginBtn"/>
        <Button
            android:id="@+id/button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:text="ALERT BUTTON  SPINNER  SEEK BAR"

            android:background="@color/blue"
            android:layout_gravity="center"/>

        <Button
            android:id="@+id/button3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="LIST VIEW"
            android:layout_marginTop="5dp"
            android:layout_gravity="center"
            android:background="@color/blue"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"/>


        <Button
            android:id="@+id/button6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TOAST AND SNACK BAR AND PROGRESS DIALOG"
            android:layout_marginTop="5dp"
            android:background="@color/blue"
            android:layout_gravity="center"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp" />

        <Button
            android:id="@+id/button5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="REGISTRATION"
            android:layout_marginTop="5dp"
            android:background="@color/blue"
            android:layout_gravity="center"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"/>

        <Button
            android:id="@+id/button7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="RECYCLE VIEW"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:background="@color/blue"
            android:layout_marginTop="5dp"
            android:layout_gravity="center"/>
        <Button
            android:id="@+id/button8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SHARED PREFERENCE - SAVE and CLEAR"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:background="@color/blue"
            android:layout_marginTop="5dp"
            android:layout_gravity="center"/>
        <Button
            android:id="@+id/button9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="WEB VIEW"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:background="@color/blue"
            android:layout_marginTop="5dp"
            android:layout_gravity="center"/>
        <Button
            android:id="@+id/button10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="CAMERA"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:background="@color/blue"
            android:layout_marginTop="5dp"
            android:layout_gravity="center"/>
        <Button
            android:id="@+id/button11"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="DISPLAY PHOTO FROM STORAGE"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:background="@color/blue"
            android:layout_marginTop="5dp"
            android:layout_gravity="center"/>
        <Button
            android:id="@+id/button12"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="GENERATE NOTIFICATION"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:background="@color/blue"
            android:layout_marginTop="5dp"
            android:layout_gravity="center"/>
        <Button
            android:id="@+id/button13"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="CUSTOM ALERTDIALOG"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:background="@color/blue"
            android:layout_marginTop="5dp"
            android:layout_gravity="center"/>

        <Button
            android:id="@+id/button14"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="FINAL REGISTRATION"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:background="@color/blue"
            android:layout_marginTop="5dp"
            android:layout_gravity="center"/>

        </LinearLayout>
    </androidx.cardview.widget.CardView>




</LinearLayout>